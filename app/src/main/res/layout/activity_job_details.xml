<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/editTextBG"
    tools:context=".JobDetailsActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_job_details_logo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop" />


            <ImageView
                android:id="@+id/image_job_details_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:forceHasOverlappingRendering="true"
                android:src="@drawable/ic_share_black" />

            <android.support.v7.widget.CardView
                android:id="@+id/job_details_card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_job_details_logo"
                android:layout_marginTop="8dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/tv_job_details_jobtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Job Title"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_job_details_jobsalary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:text="Job Salary"
                    android:textSize="15sp"
                    android:drawableLeft="@drawable/ic_rupees"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_job_details_joblocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="55dp"
                    android:drawableLeft="@drawable/ic_color_location"
                    android:text="Location"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_job_details_jobdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="270dp"
                    android:layout_marginTop="55dp"
                    android:text="Date"
                    android:textSize="13sp"
                    android:textStyle="bold" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/job_details_card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/job_details_card1"
                android:layout_marginTop="17dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/text_jobdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Details"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_job_details_companyname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:text="Company name"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_job_details_companydesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="55dp"
                    android:text="Description"
                    android:textSize="13sp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/job_details_card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/job_details_card2"
                android:layout_marginTop="17dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/text_jobdesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Description"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_job_details_jobexp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:text="Experience"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_job_details_jobdesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="55dp"
                    android:text="Description"
                    android:textSize="13sp" />

            </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/btn_jobs_fav"
                    android:layout_below="@+id/job_details_card3"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradientbackground"
                    android:layout_alignParentStart="true"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="Favorite"
                    android:textAllCaps="false"
                    android:textColor="@color/gold"
                    android:drawableLeft="@drawable/ic_favorite_border"
                    android:drawableTint="@color/gold" />


                 <Button
                    android:id="@+id/btn_jobs_apply"
                     android:layout_below="@+id/job_details_card3"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradientbackground"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="Apply Jobs"
                    android:textAllCaps="false"
                    android:textColor="@color/gold"
                    android:drawableLeft="@drawable/ic_arrow_right"
                    android:drawableTint="@color/gold"
                     android:layout_marginBottom="8dp"
                     android:layout_marginTop="30dp"
                     android:layout_marginRight="5dp"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
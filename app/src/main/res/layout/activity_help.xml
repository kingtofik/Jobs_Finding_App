<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/editTextBG"
    tools:context=".Help">


    <android.support.v7.widget.Toolbar
        android:id="@+id/help_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientbackground"
        app:title="Help"
        app:titleTextColor="@color/white">
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/help_linear1"
        android:layout_below="@+id/help_toolbar"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        android:elevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false">

        <TextView
            android:id="@+id/tv_help_aboutus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="About Us" />

        <View
            android:id="@+id/SplitLine_hor1"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:layout_marginTop="45dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_help_Privacypolycy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Privacy Policy" />

        <View
            android:id="@+id/SplitLine_hor2"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:layout_marginTop="90dp"
            android:background="@color/gray" />


        <TextView
            android:id="@+id/tv_help_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="5dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Feedback" />

        <View
            android:id="@+id/SplitLine_hor3"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:layout_marginTop="135dp"
            android:background="@color/gray" />


        <TextView
            android:id="@+id/tv_help_Contactus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="145dp"
            android:layout_marginLeft="5dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Contact Us" />

        <View
            android:id="@+id/SplitLine_hor4"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:layout_marginTop="180dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_help_rateus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Rate Us" />

    </android.support.v7.widget.CardView>

</LinearLayout>
</RelativeLayout>
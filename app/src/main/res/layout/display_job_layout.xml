<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="25dp"
    android:layout_marginBottom="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="9dp"
    app:cardCornerRadius="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image_display_logo"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/tv_display_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_display_logo"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Job Title"/>

        <TextView
            android:id="@+id/tv_display_job_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_display_logo"
            android:layout_below="@+id/tv_display_job_title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Job Description"/>

        <TextView
            android:id="@+id/tv_display_job_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_display_logo"
            android:layout_below="@+id/tv_display_job_desc"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_rupees"
            android:text="Job Salary"/>

        <TextView
            android:id="@+id/tv_display_job_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_display_logo"
            android:layout_below="@+id/tv_display_job_salary"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_color_location"
            android:text="Location"/>

        <!--<ImageView-->
            <!--android:id="@+id/image_display_job_fav"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:src="@drawable/ic_favorite_border"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_marginEnd="5dp"-->
            <!--android:layout_marginStart="135dp"-->
            <!--android:layout_toRightOf="@+id/tv_display_job_title"-->
            <!--android:layout_marginTop="6dp"/>-->

    </RelativeLayout>

</android.support.v7.widget.CardView>